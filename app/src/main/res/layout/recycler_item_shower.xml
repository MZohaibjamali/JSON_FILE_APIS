<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linerLayout_adapter"
        android:orientation="vertical"
        >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#F8F8F7"
        app:cardElevation="8dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <TextView
                android:textColor="@color/black"
                android:id="@+id/textRecy_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New_Name"
                android:padding="3dp"
                android:layout_gravity="start"
                android:textSize="15dp"
                />
            <TextView
                android:textColor="@color/black"
                android:id="@+id/textRecy_Family"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New_Family"
                android:padding="3dp"
                android:layout_gravity="start"
                android:textSize="15dp"
                />
            <TextView
                android:textColor="@color/black"
                android:id="@+id/textRecy_Company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New_Company"
                android:padding="3dp"
                android:autoSizeTextType="uniform"
                android:layout_gravity="start"
                android:textSize="15dp"
                />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/textRecy_ShowAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New_Name"
                android:padding="3dp"
                android:layout_gravity="start"
                android:textSize="15dp"
                />
            <TextView
                android:textColor="@color/black"
                android:id="@+id/textRecy_Username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New_Family"
                android:padding="3dp"
                android:layout_gravity="start"
                android:textSize="15dp"
                />
            <TextView
                android:textColor="@color/black"
                android:id="@+id/textRecy_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New_Company"
                android:padding="3dp"
                android:autoSizeTextType="uniform"
                android:layout_gravity="start"
                android:textSize="15dp"
                />
            <TextView
                android:textColor="@color/black"
                android:id="@+id/textRecy_WebSite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New_Company"
                android:padding="3dp"
                android:autoSizeTextType="uniform"
                android:layout_gravity="start"
                android:textSize="15dp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>